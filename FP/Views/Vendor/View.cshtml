@model IEnumerable<Order>
@{

    Layout = "~/Views/Shared/_VendorLayout.cshtml";

}
<html xmlns="http://www.w3.org/1999/xhtml">

<body>
    <form >
       
        <div class="site-section">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-md-12" method="post">
                        <div class="site-blocks-table">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">Image</th>
                                        <th class="product-name">Name</th>
                                        <th class="product-price">Amount Sold</th>
                                        <th class="product-quantity">Date</th>
                                        <th class="product-quantity">Buyer PhoneNumber</th>
                                        <th class="product-quantity">Buyer Email</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <img src=@Url.Content("~/User/images/" + item.Product.ImagePath) asp-append-version="true" alt="Image" class="img-fluid">

                                        </td>
                                        <td class="product-name">
                                            <p>@item.Product.Name</p>
                                        </td>
                                        <td>
                                            <p> @item.Amount </p>
                                        </td>
                                        <td>
                                            <p> @item.Datee </p>
                                        </td>
                                        <td>
                                            <p> @item.User.Phonenumber </p>
                                        </td>
                                        <td>
                                            <p> @item.User.Email </p>
                                        </td>


                                    </tr>

                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </form>
</body>
</html>