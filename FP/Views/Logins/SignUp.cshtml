@model User



<!DOCTYPE html>
<html>
<head>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body style="background-color:gray">

    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="~/img/hc3.png" style="width: 185px; " alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Sign Up</h4>
                                    </div>

                                    <form method="POST" id="register-form" asp-action="SignUp" enctype="multipart/form-data">
                                        <p>Please login to your account</p>

                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="Fname" id="form2Example11" class="form-control" placeholder="First Name" />

                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="Lname" id="form2Example11" class="form-control" placeholder="Last Name" />

                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="email" asp-for="Email" id="form2Example11" class="form-control" placeholder="Email" />

                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="Phonenumber" id="form2Example11" class="form-control" placeholder="Phone Number" />

                                        </div>
                                        <div class="form-outline mb-4">
                                             @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                          
                                            <input type="text" name="username" id="form2Example11" class="form-control" placeholder="User Name" />

                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" name="password" id="form2Example11" class="form-control" placeholder="Password" />

                                        </div>
                                        <div class="slidecontainer">

                                            <input asp-for="Age" type="range" min="15" max="80" value="50" oninput="this.nextElementSibling.value = this.value" style="color:dimgray">
                                            <output>22</output>
                                        </div>
                                        <div class="form-group">
                                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                            <input asp-for="ImageFile" placeholder="Image" />
                                        </div>
                                        <div>
                                            @Html.CheckBoxFor(m => Model.isVendor);
                                            <label for="vendor">Are you a vendor</label><br>
                                        </div>

                                        <div class="form-group form-button">
                                            <input type="submit" name="signup" id="signup" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" value="Register" />
                                        </div>



                                    </form>
                                

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">Welcome To Our HandCrafts Creator</h4>
                                    <p class="small mb-0">
                                        A helpful website where you can sell and find
                                        your favourite piece of handicraft
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
    </footer>
</body>
</html>