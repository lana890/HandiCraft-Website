@model Login
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body style="background-color:gray">

    <section class="h-100 gradient-form" >
        <div class="container py-5 h-100" >
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="~/img/hc3.png" style="width: 185px; " alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Sign In</h4>
                                    </div>

                                    <form method="POST" class="register-form" id="login-form" asp-action="Index">
                                        <p>Please login to your account</p>

                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="Username" id="form2Example11" class="form-control"
                                                   placeholder="User Name" />

                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example22" asp-for="Password" class="form-control" placeholder="Password" />

                                        </div>


                                        <div class="form-group form-button gradient-custom-2 mb-3">
                                            <input type="submit" name="signip" id="signip" class="form-submit btn-block fa-lg gradient-custom-2 mb-3" value="Sign In" style="color:white" />
                                        </div>
                                    </form>
                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <p class="mb-0 me-2">Don't have an account?</p>
                                            <br>
                                            <form asp-action="SignUp" method="get">
                                                <input type="submit" class="btn btn-outline-danger mb-3" value="Creat new" />

                                            </form>

                                        </div>
                                    

                                    @Html.ValidationSummary()


                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">Welcome To Our HandCrafts Creator</h4>
                                    <p class="small mb-0">
                                        A helpful website where you can sell and find 
                                        your favourite piece of handicraft
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>

    </footer>
</body>
</html>